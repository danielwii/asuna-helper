{
  "extends": "@tsconfig/node18-strictest-esm/tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "declaration": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["dom", "ES2022"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
